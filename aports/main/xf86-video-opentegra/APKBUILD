pkgname=xf86-video-opentegra
pkgver=0.6.0
pkgrel=1
pkgdesc="X.Org driver for NVIDIA tegra"
url="https://github.com/grate-driver/"
arch="armhf"
license="MIT"
subpackages="$pkgname-doc"
depends=
makedepends="libdrm-grate-dev xorg-server-dev xproto fontsproto libdrm-dev util-macros
	libtool m4 automake autoconf bison flex"
branch=6b3f629d5e3b97d898ce51e537a011adae4d9525
source="https://github.com/grate-driver/xf86-video-opentegra/archive/$branch.tar.gz
	"

# builddir="$srcdir"/$pkgname-$pkgver
builddir="$srcdir"/$pkgname-$branch

build() {
	cd "$builddir"
	export LDFLAGS="$LDFLAGS -Wl,-z,lazy"
	./autogen.sh \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr
	make
}

check() {
	cd "$builddir"
	make check
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}
sha512sums="3472c8c46cf98cfd48ddfe085f93f66b33174caa273295c399494b6d7263700fdd99e3f3acf6d3bc85ad9233e619934e341820337f03be154902cee12d79146c  6b3f629d5e3b97d898ce51e537a011adae4d9525.tar.gz"
