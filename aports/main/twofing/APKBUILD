pkgname=twofing
pkgver=0.1.2.20120708
pkgrel=0
pkgdesc="Daemon for two finger gestures"
url="https://github.com/Plippo/twofing"
arch="all"
license="ISC"
depends=""
makedepends="build-base linux-headers libxrandr-dev libxtst-dev libx11-dev"
subpackages=""
_rev=c647c329d94ce5d8cd2390e769804476d85880db
source="https://github.com/Plippo/twofing/archive/$_rev.zip
	0001-Use-busybox-v1.27.2-install-mode.patch"

builddir="$srcdir"/$pkgname-$_rev

prepare() {
	local i
	local filename

	cd "$builddir"
	for i in $source; do
		case $i in
			*.patch | *.diff)
				filename=`basename "$i"`
				msg $filename
				patch -p1 -i "$srcdir/$filename"
			;;
		esac
	done
}

build () {
	cd "$builddir"
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

