pkgname=devil
pkgver=1.8.0
pkgrel=1
pkgdesc="Developer's Image Library (DevIL)"
url="https://github.com/DentonW/DevIL"
arch="armhf"
license="GPL2"
subpackages="$pkgname-dev"
depends=
makedepends="cmake libpng-dev zlib-dev libjpeg-turbo-dev tiff-dev libmng-dev lcms2-dev jasper-dev"
branch=a2d9193fed0c7f93519c0c4c28b3348e0cb5759b
source="https://github.com/DentonW/DevIL/archive/$branch.tar.gz
	off_t.patch
	"
# builddir="$srcdir"/$pkgname-$pkgver
builddir="$srcdir"/DevIL-$branch

build() {
	cd "$builddir/DevIL"
	cmake \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make

}

package() {
	cd "$builddir/DevIL"
	make DESTDIR="$pkgdir" install
}

