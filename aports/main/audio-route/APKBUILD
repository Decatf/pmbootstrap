pkgname=audio-route
pkgver=0.0.1
pkgrel=0
pkgdesc="Android audio_route library"
url="https://github.com/Decatf/audio-route"
arch="armhf"
license="BSD"
depends="expat tinyalsa"
makedepends="tinyalsa expat-dev"
subpackages=""
_rev="437316dc19cc55f6cb40cb8b5eae89e16a2fed73"
source="https://github.com/Decatf/audio-route/archive/$_rev.tar.gz"

builddir="$srcdir/${pkgname}-${_rev}"

build(){
	cd "$builddir"
	make
}

package() {
	cd "$builddir"
	make PREFIX=/usr DESTDIR="$pkgdir" install
}

